<Window x:Class="WPFgui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFgui"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="5*" />
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Mock Channel Demo with C# WPF GUI" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" ></TextBlock>
    <Button Grid.Row="1" Grid.Column="0" Click="Button_Click">Send</Button>
    <TextBlock Grid.Row="1" Grid.Column="1" Text="Message Received" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Black"></TextBlock>
    <ListBox Grid.Row="2" Grid.Column="0" Name="SendList" />
    <ListBox Grid.Row="2" Grid.Column="1" Name="RecvList" />
  </Grid>
</Window>
